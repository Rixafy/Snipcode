{block content}

<pre>
    <code>{$snippet->getPayload()}</code>
</pre>

<section class="box">
    <a class="button green" n:href="Homepage:default">New Snippet</a>
</section>

<script>

    $('pre > code').each(function() {
        hljs.highlightBlock(this);
    });

    $(document).ready(function() {
        $('code.hljs').each(function(i, block) {
            hljs.lineNumbersBlock(block);
        });
    });

    document.title = {$snippet->getTitle()} + ' | ' + {$constants['project_name']};
    window.history.pushState({"pageTitle":"test"},"", 'https://code.haelexuis.eu/' + {$snippet->getSlug()});
</script>